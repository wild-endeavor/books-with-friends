
<form action="<%= action_url %>" method="POST">
  <%= auth_token_helper %>

  <input
     name="_method"
     type="hidden"
     value="<%= method %>">

  <label for="user_email">Email</label>
  <input
     id="user_email"
     name="user[email]"
     type="text">
  <br>

  <label for="user_password">Password</label>
  <input
     id="user_password"
     name="user[password]"
     type="password">
  <br>

  <input type="submit" value="<%= message %>">
</form>