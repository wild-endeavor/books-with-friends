<h1>Sign In</h1>

<form id="new-session-login" action="<%= session_url %>" method="post">

<%= auth_token_helper %>

  <label for="user_email">Username</label>
  <input
     id="user_email"
     name="user[email]"
     type="text">
  <br>

  <label for="user_password">Password</label>
  <input
     id="user_password"
     name="user[password]"
     type="password">
  <br>

  <input type="submit" value="Log in">
</form>

<div>
  Not a registered user? <%= link_to "Sign Up", new_user_url %>
</div>
<div>
  Employers: Please use one of these guest logins:
  <br>
  <% @guest_logins.each do |key, value| %>
    <button class="btn btn-info btn-sm guest-login"
    data-id="<%= value%>"><%= key %></button>
  <% end %>
</div>

<script type="text/javascript">
$("button.guest-login").click(function(event) {
  event.preventDefault();
  $("#user_email").val($(event.target).attr("data-id"));
  $("#user_password").val("password");
  $("#new-session-login").submit();
});
</script>

