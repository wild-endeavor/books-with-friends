<!DOCTYPE html>
<html>
<head>
  <title>Bookfriends</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Rokkitt:700|Alegreya|Pacifico' rel='stylesheet' type='text/css'>
</head>
<body>
<%= yield :nav %>

<% if flash[:notices] %>
  <ul>
    <% flash[:notices].each do |notice| %>
    <li><%= notice %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= yield %>

</body>
</html>
