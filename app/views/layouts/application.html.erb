<!DOCTYPE html>
<html>
<head>
  <title>Bookfriends</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Books With Friends</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav nav-pills nav-links">
        <li><a href="#" id="nav-search-link">Link2</a></li>
        <% if current_user %>
          <li><a href="#/">My Library</a></li>
        <% end %>
      </ul>

      <% if current_user %>
      <div class="dropdown pull-right navbar-form">
        <button class="btn btn-primary dropdown-toggle user-drop-down" type="button" data-toggle="dropdown">
          <%= current_user.email %>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to 'Your Profile', current_user %></li>
          <li><%= link_to 'Sign Out', session_url, method: :delete %></li>
        </ul>
      </div>
      <% else %>
        <div class="pull-right navbar-form">
          <%= link_to 'Sign In', new_session_url, class: 'btn btn-success sign-in-btn' %>
        </div>
      <% end %>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% if flash[:notices] %>
  <ul>
    <% flash[:notices].each do |notice| %>
    <li><%= notice %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= yield %>

</body>
</html>
