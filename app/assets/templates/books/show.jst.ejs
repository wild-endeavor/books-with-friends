
<img src='<%= book.get("thumbnail_small") %>'>
<h5><%= book.escape("title") %></h5>
<%= book.escape("author") %>


<% if (mode === "own") { %>
  <button type="button" class="close remove-owned-book">&times;</button>
  <% if (book.escape("available") === "F") { %>
    This title is on loan.
  <% } %>    
<% } %>

<% if (mode === "search") { %>
  <% if (ownBookCatalog.indexOf(book.escape("google_id")) > -1) { %>
    <!-- // TODO: Link to shelf and scroll to book -->
    Already Owned
  <% } else { %>
    <button type="button"
        class="add-book-to-shelf close btn btn-xs">
          <span class="glyphicon glyphicon-plus"></span>
    </button>
  <% } %>

  <% if (friendAvailability && friendAvailability.length > 0) { %>
    <ul>
      <% _(friendAvailability).each(function(friend) { %>
        <li>
          <%= friend.escape("email") %> has this book!
          <button type="button" class="btn btn-default btn-xs request-book" data-id="<%= friend.id %>">
            <span class="glyphicon glyphicon-book"></span>
          </button>
        </li>
      <% }) %>
    </ul>
  <% } %>
<% } %>

<% if (mode === "friend") { %>
  <% if (book.escape("available") === "F") { %>
    Book is currently out.
  <% } else { %>
    <% if (requests.length > 0) { %>
      You've already requested this title.
    <% } else { %>
    <button type="button" class="close request-book">R</button>
    <% } %>
  <% } %>
<% } %>

